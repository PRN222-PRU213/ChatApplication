<Window x:Class="ChatApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApplication"
        mc:Ignorable="d"
        Title="💬 Group Chat"
        Height="740"
        Width="490"
        MinHeight="600"
        MinWidth="400"
        WindowStartupLocation="CenterScreen"
        Background="#ECE5DD">

    <Window.Resources>
        <local:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
        <local:BoolToColorConverter x:Key="BoolToColorConverter" />
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />

        <!-- Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="42" />
            <Setter Property="Height" Value="42" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Background" Value="#E8E8E8" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="21"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#B8B8B8" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5" />
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Send Button Style -->
        <Style x:Key="SendButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="42" />
            <Setter Property="Height" Value="42" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="#075E54" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="21"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#064E46" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#053E38" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#A5D6A7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Emoji Button Style -->
        <Style x:Key="EmojiButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#BDBDBD" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ChatTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#E0E0E0" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="{TemplateBinding Padding}"
                                          VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#075E54" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- ========== HEADER ========== -->
        <Border Grid.Row="0" Background="#075E54" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="💬"
                               FontSize="24"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0" />
                    <StackPanel>
                        <TextBlock Text="Group Chat"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="White" />
                        <TextBlock Text="{Binding ConnectionStatus}"
                                   FontSize="11"
                                   Foreground="#A5D6A7" />
                    </StackPanel>
                </StackPanel>

                <!-- Form kết nối -->
                <Border Grid.Row="1"
                        Background="#064E46"
                        CornerRadius="10"
                        Padding="12">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="80" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"
                                 Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsNotConnected}"
                                 Style="{StaticResource ChatTextBoxStyle}"
                                 BorderThickness="0"
                                 Background="#0A7A6E"
                                 Foreground="White"
                                 FontSize="13">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <TextBlock Grid.Column="1"
                                   Text="@"
                                   Foreground="#A5D6A7"
                                   VerticalAlignment="Center"
                                   Margin="8,0"
                                   FontWeight="Bold" />

                        <TextBox Grid.Column="2"
                                 Text="{Binding ServerIP, UpdateSourceTrigger=PropertyChanged}"
                                 IsEnabled="{Binding IsNotConnected}"
                                 Style="{StaticResource ChatTextBoxStyle}"
                                 BorderThickness="0"
                                 Background="#0A7A6E"
                                 Foreground="White"
                                 FontSize="13"
                                 HorizontalContentAlignment="Center">
                            <TextBox.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="8" />
                                </Style>
                            </TextBox.Resources>
                        </TextBox>

                        <Button Grid.Column="3"
                                Content="{Binding ConnectButtonText}"
                                Command="{Binding ConnectCommand}"
                                IsEnabled="{Binding IsNotConnected}"
                                Padding="20,8"
                                Margin="10,0,0,0"
                                Background="#25D366"
                                Foreground="White"
                                FontWeight="SemiBold"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#20C35E" />
                                        </Trigger>
                                        <Trigger Property="IsEnabled" Value="False">
                                            <Setter TargetName="border" Property="Background" Value="#A5D6A7" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- ========== DANH SÁCH TIN NHẮN ========== -->
        <ListBox x:Name="MessageList"
                 Grid.Row="1"
                 ItemsSource="{Binding Messages}"
                 Background="#ECE5DD"
                 BorderThickness="0"
                 Padding="10"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 HorizontalContentAlignment="Stretch">

            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Margin" Value="0,4" />
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Focusable" Value="False" />
                </Style>
            </ListBox.ItemContainerStyle>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Border Padding="12,10"
                                Margin="{Binding Margin}"
                                MaxWidth="300"
                                CornerRadius="12"
                                HorizontalAlignment="{Binding IsMine, Converter={StaticResource BoolToAlignmentConverter}}">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White" />
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="8"
                                                              ShadowDepth="1"
                                                              Opacity="0.1" />
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMine}" Value="True">
                                            <Setter Property="Background" Value="#DCF8C6" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding User}" Value="SYSTEM">
                                            <Setter Property="Background" Value="#FFF9C4" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding User}" Value="FILE">
                                            <Setter Property="Background" Value="#E3F2FD" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <StackPanel>
                                <!-- Tên người gửi -->
                                <TextBlock Text="{Binding User}"
                                           FontWeight="SemiBold"
                                           FontSize="11"
                                           Foreground="#075E54"
                                           Margin="0,0,0,5">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMine}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- 🔥 HIỂN THỊ ẢNH - ĐƠN GIẢN -->
                                <Border CornerRadius="8"
        Margin="0,0,0,5"
        Visibility="{Binding HasImage, Converter={StaticResource BoolToVisibility}}"
        Cursor="Hand"
        MouseLeftButtonUp="Image_Click">
                                    <Image Source="{Binding ImageSource}"
                                   MaxWidth="260"
                                   MaxHeight="280"
                                   Stretch="Uniform"
                                  RenderOptions.BitmapScalingMode="HighQuality" />
                                </Border>

                                <!-- Nội dung tin nhắn -->
                                <TextBlock Text="{Binding Message}"
                                           TextWrapping="Wrap"
                                           FontSize="14"
                                           Foreground="#303030"
                                           LineHeight="20" />

                                <!-- Progress bar -->
                                <Grid Margin="0,8,0,0"
                                      Visibility="{Binding IsReceiving, Converter={StaticResource BoolToVisibility}}">
                                    <ProgressBar Value="{Binding Progress}"
                                                 Height="4"
                                                 Foreground="#075E54"
                                                 Background="#E0E0E0" />
                                </Grid>

                                <!-- 🔥 Nút tải xuống -->
                                <Button Content="⬇️ Tải xuống"
                                        Margin="0,8,0,0"
                                        Padding="12,6"
                                        Background="#075E54"
                                        Foreground="White"
                                        FontSize="12"
                                        Cursor="Hand"
                                        Command="{Binding DownloadCommand}"
                                        Visibility="{Binding ShowDownloadButton, Converter={StaticResource BoolToVisibility}}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="15"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#064E46" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- 🔥 Nút lưu ảnh -->
                                <Button Content="💾 Lưu ảnh"
                                        Margin="0,8,0,0"
                                        Padding="12,6"
                                        Background="#1976D2"
                                        Foreground="White"
                                        FontSize="12"
                                        Cursor="Hand"
                                        Command="{Binding DownloadCommand}">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Visibility" Value="{Binding HasImage, Converter={StaticResource BoolToVisibility}}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDownloaded}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="15"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="#1565C0" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>

                                <!-- Đã tải -->
                                <TextBlock Text="✓ Đã lưu"
                                           FontSize="11"
                                           Foreground="#2E7D32"
                                           FontWeight="SemiBold"
                                           Margin="0,6,0,0"
                                           Visibility="{Binding IsDownloaded, Converter={StaticResource BoolToVisibility}}" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- ========== INPUT AREA ========== -->
        <Border Grid.Row="2" Background="White" Padding="10,12">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- 🔥 EMOJI PANEL (Ẩn/Hiện) -->
                <Border Grid.Row="0"
                        Background="#FAFAFA"
                        CornerRadius="12"
                        Padding="8"
                        Margin="0,0,0,10"
                        Visibility="{Binding IsEmojiPanelOpen, Converter={StaticResource BoolToVisibility}}">
                    <ScrollViewer MaxHeight="150"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding Emojis}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding}"
                                            Style="{StaticResource EmojiButtonStyle}"
                                            Command="{Binding DataContext.AddEmojiCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Input Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- 🔥 Nút Emoji Toggle -->
                    <Button Grid.Column="0"
                            Style="{StaticResource IconButtonStyle}"
                            Command="{Binding ToggleEmojiCommand}"
                            IsEnabled="{Binding IsConnected}"
                            ToolTip="Chọn emoji">
                        <TextBlock Text="😊" FontSize="20" />
                    </Button>

                    <!-- Nút gửi file -->
                    <Button Grid.Column="1"
                            Style="{StaticResource IconButtonStyle}"
                            Margin="8,0,0,0"
                            Command="{Binding SendFileCommand}"
                            IsEnabled="{Binding CanSendFile}"
                            ToolTip="Gửi file">
                        <TextBlock FontSize="18">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Text" Value="📎" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSendingFiles}" Value="True">
                                            <Setter Property="Text" Value="⏳" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Button>

                    <!-- Input text -->
                    <TextBox Grid.Column="2"
                             Text="{Binding InputMessage, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource ChatTextBoxStyle}"
                             Margin="10,0"
                             IsEnabled="{Binding IsConnected}"
                             VerticalContentAlignment="Center" />

                    <!-- Nút gửi -->
                    <Button Grid.Column="3"
                            Style="{StaticResource SendButtonStyle}"
                            Command="{Binding SendCommand}"
                            IsEnabled="{Binding IsConnected}"
                            ToolTip="Gửi tin nhắn">
                        <TextBlock Text="➤" FontSize="16" Foreground="White" />
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>